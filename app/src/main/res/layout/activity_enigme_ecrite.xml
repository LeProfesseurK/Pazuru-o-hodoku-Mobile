<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.EnigmeEcriteActivity">

    <Button
        android:id="@+id/id_btnQuitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickQuitter"
        android:text="Quitter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/id_nomPuzzleEcrit"
        android:layout_width="408dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:text="Nom de l'énigme écrite"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_btnQuitter" />

    <TextView
        android:id="@+id/id_enonceEcrit"
        android:layout_width="408dp"
        android:layout_height="372dp"
        android:layout_marginTop="8dp"
        android:text="Enonce"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_nomPuzzleEcrit" />

    <Button
        android:id="@+id/id_repondreEcrit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="onClickRepondre"
        android:text="Répondre"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_reponseEcrit" />

    <EditText
        android:id="@+id/id_reponseEcrit"
        android:layout_width="408dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="#00BCD4"
        android:ems="10"
        android:hint="Réponse"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_enonceEcrit" />
</android.support.constraint.ConstraintLayout>